<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appcoins.billing.sdk">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.appcoins.BILLING" />

    <queries>
        <intent>
            <action android:name="com.appcoins.wallet.iab.action.BIND" />
        </intent>
        <intent>
            <action android:name="com.dti.folderlauncher.iab.action.BIND" />
        </intent>
        <intent>
            <action android:name="com.aptoide.android.aptoidegames.iab.action.BIND" />
        </intent>

        <package android:name="com.appcoins.wallet" />
        <package android:name="com.dti.folderlauncher" />
        <package android:name="com.aptoide.android.aptoidegames" />
        <package android:name="cm.aptoide.pt" />

        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
    </queries>

    <application>
        <activity
            android:name="com.appcoins.sdk.billing.helpers.InstallDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.appcoins.sdk.billing.helpers.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        <activity
            android:configChanges="orientation|screenSize"
            android:name="com.appcoins.sdk.billing.webpayment.WebPaymentActivity"
            android:theme="@style/Theme.AppCompat.Transparent.FitAppWindow" />
        <activity
            android:launchMode="singleTask"
            android:name="com.appcoins.sdk.billing.webpayment.ExternalPaymentActivity"
            android:theme="@style/Theme.AppCompat.Transparent.FitAppWindow" />
        <activity
            android:configChanges="orientation|screenSize"
            android:name="com.appcoins.sdk.billing.activities.BillingFlowActivity"
            android:theme="@style/Theme.AppCompat.Transparent.FitAppWindow" />
        <activity
            android:exported="true"
            android:name="com.appcoins.sdk.billing.UriCommunicationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:host="billing"
                    android:path="/communication/requester/1"
                    android:scheme="appcoins" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:exported="true"
            android:name="com.appcoins.sdk.billing.WebIapCommunicationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="${applicationId}"
                    android:scheme="web-iap-result" />
            </intent-filter>
        </activity>
    </application>
</manifest>
